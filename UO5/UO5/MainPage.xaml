<Page
    x:Class="UO5.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UO5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="LayoutGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button 
            x:Name="ClickMeButton"
            Content="Click me&#xD;&#xA;&#xD;&#xA;"
            Margin="227,249,0,0"
            VerticalAlignment="Top"
            Height="102" Width="263"
            FontSize="35"
            Click="ClickMeButton_Click"
            >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" Margin="481,545,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="270" FontSize="45"/>

    </Grid>
</Page>
